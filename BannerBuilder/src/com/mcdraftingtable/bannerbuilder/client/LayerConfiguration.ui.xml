<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:clientui="urn:import:com.mcdraftingtable.bannerbuilder.client.ui">
	<ui:style>
		.swatch {
			border: solid 1px silver;
			width:48px;
			height:48px;
		}
		
		.border {
			border: solid 1px olive;
		}
	</ui:style>
	<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" width="100%" horizontalAlignment="ALIGN_LEFT" spacing="4">
		<g:Label ui:field="layerLabel" text="Layer #:"/>
		<clientui:PatternSwatch ui:field="patternSwatch" />
		<clientui:ColorSwatch ui:field="colorSwatch" />
		<g:cell horizontalAlignment="ALIGN_RIGHT">
			<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" spacing="4">
				<g:Button ui:field="moveUpButton" text="^" />
				<g:Button ui:field="moveDownButton" text="v" />
				<g:Button ui:field="removeButton" text="-" />
			</g:HorizontalPanel>
		</g:cell>
		
	</g:HorizontalPanel>
</ui:UiBinder> 