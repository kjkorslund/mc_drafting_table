<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:client='urn:import:com.mcdraftingtable.bannerbuilder.client'>
	
	<ui:style>
		.border {
			border: solid 1px blue;
		}
	</ui:style>
	
	<g:VerticalPanel horizontalAlignment="ALIGN_LEFT">
		<g:Label text="Base Color:" addStyleNames="{style.border}"/>
		<g:HorizontalPanel/>
		<g:Label text="Layers:"/>
		<client:LayerSummary layerID="1" />
		<client:LayerSummary layerID="2" />
		<client:LayerSummary layerID="3" />
		<client:LayerSummary layerID="4" />
		<client:LayerSummary layerID="5" />
		<client:LayerSummary layerID="6" />
	</g:VerticalPanel>
</ui:UiBinder> 