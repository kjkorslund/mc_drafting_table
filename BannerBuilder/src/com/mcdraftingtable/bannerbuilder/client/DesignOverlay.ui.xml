<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:client="urn:import:com.mcdraftingtable.bannerbuilder.client"
	xmlns:clientui="urn:import:com.mcdraftingtable.bannerbuilder.client.ui">
	
	<ui:style>
		.border {
			border: solid 1px blue;
		}
		
		.layerRow {
			/*border-top: solid 1px gray;*/
		}
		
		.header {
			font-weight: bold;
			font-size: larger;
			margin-top: 1em;
			margin-bottom: 0.5em;
		}
	</ui:style>
	
	<g:VerticalPanel ui:field="mainPanel" horizontalAlignment="ALIGN_LEFT">
		<g:Label text="Base Color" addStyleNames="{style.header}" />
		<clientui:ColorSwatch ui:field="baseColorSwatch" />
		<g:Label text="Layers" addStyleNames="{style.header}"/>
		
		<!-- TODO: figure out a way to get the layer configuration widgets to line up vertically -->
		
		<g:HorizontalPanel ui:field="addLayerRow" addStyleNames="{style.layerRow}" width="100%" spacing="4">
			<g:Cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE">
				<g:Button ui:field="addLayerButton">+</g:Button>
			</g:Cell>
			
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 