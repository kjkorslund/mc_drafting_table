<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:client='urn:import:com.mcdraftingtable.bannerbuilder.client'>
	
	<ui:style type="com.mcdraftingtable.bannerbuilder.client.BannerBuilder.BannerBuilderStyle">
		.bannerBackground {
			background: linear-gradient(#bbddff, #88bbee);
		}
		
		.overlayPanel {
			padding: 0.5em;
		}
		
		.overlayPanelParent {
			background-color: white;
			border: solid 1px silver;
			box-shadow: 6px 6px 4px rgba(0,0,0,0.33);
		}
	</ui:style>
	
	<g:LayoutPanel ui:field="layoutPanel">
		<g:layer>
			<g:HTMLPanel addStyleNames="{style.bannerBackground}">
				<div align="center" style="margin-top:12em">Banner display</div>
			</g:HTMLPanel>
		</g:layer>
		<g:layer right="2em" width="20em" top="2em" height="32em">
			<g:HTMLPanel ui:field="instructionsOverlay" addStyleNames="{style.overlayPanel}">Instructions overlay</g:HTMLPanel>
		</g:layer>
		<g:layer left="2em" width="20em" top="2em" height="32em">
			<g:HTMLPanel ui:field="designOverlay" addStyleNames="{style.overlayPanel}">Design overlay</g:HTMLPanel>
		</g:layer>
	</g:LayoutPanel>
	
</ui:UiBinder> 