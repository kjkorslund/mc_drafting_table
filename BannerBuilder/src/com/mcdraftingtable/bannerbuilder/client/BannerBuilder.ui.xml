<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.bannerBackground {
			background-color: aqua;
		}
		
		.overlayPanel {
			background-color: white;
		}
	</ui:style>
	
	<g:LayoutPanel>
		<g:layer>
			<g:HTMLPanel addStyleNames="{style.bannerBackground}">
				Background
				<div align="center">test</div>
			</g:HTMLPanel>
		</g:layer>
		<g:layer right="2em" width="20em" top="2em" height="32em">
			<g:HTMLPanel addStyleNames="{style.overlayPanel}">Materials and instructions</g:HTMLPanel>
		</g:layer>
		<g:layer left="2em" width="20em" top="2em" height="32em">
			<g:HTMLPanel addStyleNames="{style.overlayPanel}">Builder tools</g:HTMLPanel>
		</g:layer>
	</g:LayoutPanel>
	
</ui:UiBinder> 