<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:client='urn:import:com.mcdraftingtable.bannerbuilder.client'>
	
	<ui:style type="com.mcdraftingtable.bannerbuilder.client.BannerBuilder.BannerBuilderStyle">
		.bannerBackground {
			background: linear-gradient(#bbddff, #88bbee);
			/* background: aqua; */
		}
		
		.overlayPanel {
			padding: 0.5em;
			margin: 1.5em;
			background-color: white;
			border: solid 1px silver;
			box-shadow: 6px 6px 4px rgba(0,0,0,0.33);
		}
	</ui:style>

	<g:DockLayoutPanel unit="EM" addStyleNames="{style.bannerBackground}">
		<g:west size="28.0">
			<g:ScrollPanel addStyleNames="{style.overlayPanel}">
				<client:DesignOverlay ui:field="designOverlay" width="100%" />
			</g:ScrollPanel>
		</g:west>
		<g:center>
			<g:HTMLPanel>
				<div align="center" style="margin-top:12em">Banner display</div>
			</g:HTMLPanel>
		</g:center>
		<g:east size="32.0">
			<g:ScrollPanel addStyleNames="{style.overlayPanel}">
				<client:InstructionsOverlay ui:field="instructionsOverlay" width="100%" />
			</g:ScrollPanel>
		</g:east>
	</g:DockLayoutPanel>
	
	
	
</ui:UiBinder> 