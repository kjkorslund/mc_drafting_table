<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.dropTarget {
			margin: 0.5em;
			border: medium dashed teal;
			color: teal;
			text-align: center;
			line-height: 3em;
		}
	</ui:style>
	
	<g:TabLayoutPanel barHeight="2" barUnit="EM" width="25em" height="12em">
		<g:tab>
			<g:header>Link</g:header>
			<g:VerticalPanel width="24em" height="9em">
				<g:Label text="Paste the link URL here:" horizontalAlignment="ALIGN_LEFT" />
				<g:TextBox width="23em" ui:field="linkBox" />
				<g:Cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_BOTTOM">
					<g:Button text="Select" ui:field="linkButton" />
				</g:Cell>
			</g:VerticalPanel>
		</g:tab>
		<g:tab>
			<g:header>Upload</g:header>
			<g:VerticalPanel width="24em" height="9em">
				<g:Label text="Choose a file to upload (incomplete):"/>
				<g:FileUpload width="23em" name="fileUpload" ui:field="fileUpload"/>
				<g:HTMLPanel width="22.25em" height="3em" ui:field="dropTarget" addStyleNames="{style.dropTarget}">
					<span>Drag and drop a file here</span>
				</g:HTMLPanel>
			</g:VerticalPanel>
		</g:tab>
		
	</g:TabLayoutPanel>
</ui:UiBinder> 